                        </span>
                    </div>
                    <%- include('./layout/corejsfile') %>

                        <script>
                            async function deleteProductFromCart(productId) {
                                try {
                                    const response = await fetch(`/delete_product/${productId}`, {
                                        method: 'DELETE'
                                    });

                                    if (!response.ok) {
                                        throw new Error('Failed to delete product');
                                    }

                                    // Handle successful response (e.g., show success message)
                                    alert('Product remove from Cart successfully');

                                    // Redirect or perform any other action after deleting the product
                                    window.location.reload(); // For example, reload the page

                                } catch (error) {
                                    console.error('Error deleting product:', error);
                                    // Handle error (e.g., show error message)
                                }
                            }
                        </script>